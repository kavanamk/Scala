val nums = Set(1,2,3)
nums +5 //addds an element to nums
nums - 3 //removes 3
nums ++ List(4,5)
nums -- List(1,4)
nums.size
nums.contains(3)
nums+=3
words-="see"
words++=(do, re)
words --=List("spot","run")
words.clear()

